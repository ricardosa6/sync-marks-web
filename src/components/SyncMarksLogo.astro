---
import SyncMarksLogoRef from "@/icons/SyncMarks.svg";

import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  showName?: boolean;
  imgClass?: astroHTML.JSX.HTMLAttributes["class"];
}

const { imgClass, showName = true } = Astro.props;
---

<div class="flex gap-3 items-center">
  <img
    src={SyncMarksLogoRef.src}
    alt="Sync Marks Logo"
    class:list={["h-8 w-8", imgClass]}
  />
  {
    showName ? (
      <p class="text-md font-semibold text-slate-700 dark:text-slate-300 text-pretty">
        {t("syncMarks")}
      </p>
    ) : null
  }
</div>
