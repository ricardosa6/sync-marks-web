---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="px-4 lg:px-6">
    <Header />
    <div
      class="pt-[var(--header-height-small)] lg:pt-[var(--header-height-big)]"
    >
      <slot />
    </div>
    <Footer />
    <div
      class="absolute inset-0 top-0 -z-10 h-full w-full overflow-hidden bg-white dark:bg-slate-950"
    >
      <div
        class="absolute bottom-auto left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[30%] translate-y-[20%] rounded-full bg-[rgba(173,109,244,0.5)] dark:bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)] opacity-50 blur-[80px]"
      >
      </div>
    </div>
  </body>
</html>
<script>
  // On page load or when changing themes, best to add inline in `head` to avoid FOUC
  if (
    localStorage.getItem("color-theme") === "dark" ||
    (!("color-theme" in localStorage) &&
      window.matchMedia("(prefers-color-scheme: dark)").matches)
  ) {
    document.documentElement.classList.add("dark");
  } else {
    document.documentElement.classList.remove("dark");
  }
</script>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 203 213 225;
    --accent-dark: 51 65 85;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );

    --header-height-big: 5rem;
    --header-height-small: 4rem;
  }

  html {
    font-family: system-ui, sans-serif;
    /* background: #13151a; */
    /* background-size: 224px; */
    color: rgb(var(--accent-dark));
    background: white;
  }
  html.dark {
    color: rgb(var(--accent-light));
    background: rgb(2 6 23);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
